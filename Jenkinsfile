pipeline {
    agent any

    stages {
        stage ('Build') {
            steps {
                echo "Steps to check out the code from repo and build will come here...."
            }
        }
        stage ('Test'){
            steps {
                echo "Steps to trigger the test scripts will come here...."
            }
        }
        stage ('Deploy'){
            steps {
                echo "Steps to deploy the tested build onto servers will come here...."
            }
        }
    }
}